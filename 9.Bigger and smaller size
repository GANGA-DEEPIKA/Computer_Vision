import cv2

img = cv2.imread("flower.png")  # make sure the file name is correct

if img is None:
    print("Error: Image not found. Check the file name and path.")
else:
    cv2.imshow("Original", img)
    cv2.imshow("Smaller", cv2.resize(img, None, fx=0.5, fy=0.5, interpolation=cv2.INTER_AREA))
    cv2.imshow("Bigger", cv2.resize(img, None, fx=1.5, fy=1.5, interpolation=cv2.INTER_CUBIC))

    cv2.waitKey(0)
    cv2.destroyAllWindows()
